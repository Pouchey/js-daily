{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./",    
    "strict": true, 
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "sourceRoot": "src",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
} 